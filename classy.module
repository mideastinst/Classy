}

function classy_signup_submit($form, $form_state) {

  global $user;
  $uid = $user->uid;
  
  $table = 'classy_grades';
  $record = array(
    'student_id' => $uid,
    'class_id' => $form['nid']['#value'],
  );
  drupal_write_record($table, $record);
}

